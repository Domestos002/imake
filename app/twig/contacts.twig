{% extends "layouts/app.twig" %}

{% block pageTitle %}Главная страница{% endblock %}

{% block content %}
    {% include "widgets/breadcrumb.twig" %}
    <div class="page-content">
    <div class="uk-container uk-container-center">
        <div class="b-contacts mb50">
            <div class="b-contacts__title">
                <p class="fz18 ttu txt-black txt-bold tal mb40">
                    CONTACT US
                </p>
                <p class="txt-black">
                    Lorem ipsum dolor sit amet, consectetur adipisicing elit. Corporis, eum.
                </p>
            </div>
            <div class="b-contacts__contain">
                <div class="uk-grid" data-uk-grid="{gutter: 30}">
                    <div class="uk-width-small-1-1 uk-width-medium-1-2">
                        <div class="b-contacts__contain-map fluid ovh" id="contain__map"></div>
                    </div>
                    <div class="uk-width-small-1-1 uk-width-medium-1-2">
                        <div class="b-contacts__contain-form tal">
                            <form action="">
                                <div class="b-contacts__contain-form-block">
                                    <label class="fz15" for="">Subject Heading</label>
                                    <div class="input-wrapper">
                                        <input type="text">
                                    </div>
                                </div>
                                <div class="b-contacts__contain-form-block">
                                    <label class="fz15" for="">Email address</label>
                                    <div class="input-wrapper">
                                        <input type="text">
                                    </div>
                                </div>
                                <div class="b-contacts__contain-form-block">
                                    <label class="fz15" for="">Order reference</label>
                                    <div class="input-wrapper">
                                        <input type="text">
                                    </div>
                                </div>
                                <div class="b-contacts__contain-form-block form-file">
                                    <label class="fz15" for="">Order reference</label>
                                    <p class="txt-grey"></p>
                                    <div class="uk-form-file">
                                        <input type="file">
                                        <button class="btn blue-btn ttu">choose file</button>
                                    </div>
                                </div>
                                <div class="b-contacts__contain-form-block form-textarea">
                                    <textarea class="form-control" id="message" placeholder="Message" name="message"></textarea>
                                </div>
                                <button class="btn blue-btn ttu fz15">
                                    send mail
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="b-page-content-info">
            <div class="uk-grid">
                <div class="b-page-content-info-item-wrapper1 uk-width-small-1-1 uk-width-medium-1-3">
                    <div class="b-page-content-info-item">
                        <a href="#" class="uk-icon-button uk-icon-map-marker"></a>
                        <div class="b-page-content-info-item-text">
                            <p class="fz16 txt-black txt-bold ttu">
                                address:
                            </p>
                            <p class="txt-black">
                                Your company,42 Puffin street 12345 Puffinville France
                            </p>
                        </div>
                    </div>
                </div>
                <div class="b-page-content-info-item-wrapper1 uk-width-small-1-1 uk-width-medium-1-3">
                    <div class="b-page-content-info-item">
                        <a href="#" class="uk-icon-button uk-icon-phone"></a>
                        <div class="b-page-content-info-item-text">
                            <p class="fz16 txt-black txt-bold ttu">
                                phone:
                            </p>
                            <p class="txt-black">
                                <a href="tel:0123456789" class="txt-black">
                                    0123-456-789,0123-456-789
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="b-page-content-info-item-wrapper1 uk-width-small-1-1 uk-width-medium-1-3">
                    <div class="b-page-content-info-item">
                        <a href="#" class="uk-icon-button uk-icon-envelope-o"></a>
                        <div class="b-page-content-info-item-text">
                            <p class="fz16 txt-black txt-bold ttu">
                                email:
                            </p>
                            <a href="tel:0123456789" class="txt-black">
                                sales@yourcompany.com
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% include "widgets/advantages-widget.twig" %}
    </div>
    <script src="https://api-maps.yandex.ru/2.1/?lang=tr_TR" type="text/javascript"></script>
    <script src="js/YaMap.js"></script>
{% endblock %}