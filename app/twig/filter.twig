{% extends "layouts/app.twig" %}

{% block pageTitle %}Главная страница{% endblock %}

{% block content %}
    {% include "widgets/breadcrumb.twig" %}
    <div class="page-content">
    <div class="uk-container uk-container-center">
        <div class="uk-grid" data-uk-grid="{gutter: 40}">
            <div class="page-content__sidebar uk-width-small-1-1 uk-width-medium-1-4">
                <div class="b-filter-sidebar mb10">

                    <div class="b-filter-sidebar-item">
                        <div class="b-filter-sidebar-item__block">
                            <p class="fz16 ttu mb5">AVAILABILITY IN STOCK</p>
                            <div class="b-filter-sidebar-item__block-enabled-notify">
                                <p class="txt-black txt-bold mb 10 fz15">ENABLED FILTERS:</p>
                                <p class="txt-black fz10">Price: $16.00 - $48.19</p>
                            </div>
                        </div>

                        <div class="b-filter-sidebar-item__block">
                            <p class="txt-black fz15 ttu tal">
                                Catalog
                            </p>
                            <div class="cur-p b-filter-sidebar-item__block-link-line brand-hover fx-justify fx-wrap">
                                <p class="txt-grey fz13">Not available</p>
                                <p class="txt-grey fz13">(1)</p>
                            </div>
                            <div class="cur-p b-filter-sidebar-item__block-link-line brand-hover fx-justify fx-wrap">
                                <p class="txt-grey fz13">In stock</p>
                                <p class="txt-grey fz13">(1)</p>
                            </div>
                        </div>
                        <div class="b-filter-sidebar-item__block">
                            <p class="txt-black fz15 ttu tal">
                                codition
                            </p>
                            <div class="cur-p b-filter-sidebar-item__block-link-line brand-hover fx-justify fx-wrap">
                                <p class="txt-grey fz13">New</p>
                                <p class="txt-grey fz13">(1)</p>
                            </div>
                        </div>
                        <div class="b-filter-sidebar-item__block">
                            <p class="txt-black fz15 ttu tal">
                                size
                            </p>
                            <div class="cur-p b-filter-sidebar-item__block-link-line brand-hover fx-justify fx-wrap">
                                <p class="txt-grey fz13">New</p>
                                <p class="txt-grey fz13">(1)</p>
                            </div>
                        </div>
                        <div class="b-filter-sidebar-item__block">
                            <p class="txt-black fz15 ttu tal">
                                color
                            </p>
                            <div class="cur-p b-filter-sidebar-item__block-link-line colored brand-hover fx-justify fx-wrap">
                                <span class="b-filter-sidebar-item__block-link-line-color green"></span>
                                <p class="txt-grey fz13">New</p>
                                <p class="txt-grey fz13">(1)</p>
                            </div>
                            <div class="cur-p b-filter-sidebar-item__block-link-line colored brand-hover fx-justify fx-wrap">
                                <span class="b-filter-sidebar-item__block-link-line-color black"></span>
                                <p class="txt-grey fz13">New</p>
                                <p class="txt-grey fz13">(1)</p>
                            </div>
                            <div class="cur-p b-filter-sidebar-item__block-link-line colored brand-hover fx-justify fx-wrap">
                                <span class="b-filter-sidebar-item__block-link-line-color beige2"></span>
                                <p class="txt-grey fz13">New</p>
                                <p class="txt-grey fz13">(1)</p>
                            </div>
                        </div>
                        <div class="b-filter-sidebar-item__block">
                            <div class="input-range-wrapper slider-block">
                                <div class="fx-justify fx-wrap">
                                    <p class="txt-black fz13 ttu tal">
                                        price
                                    </p>
                                    <label class="slider-label" for=""></label>
                                </div>
                                <input id="" type="text" class="slider-range" value="" data-slider-min="10"
                                       data-slider-max="1000" data-slider-step="5" data-slider-value="[250,450]"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="page-content__main uk-width-small-1-1 uk-width-medium-3-4">
                <div class="b-filter-main">
                    <div class="b-filter-main__title">
                        <div class="fx-justify fx-wrap mb15 fx-md-column">
                            <p class="fz16 ttu txt-bold">Lips</p>
                            <span class="fz15">There are 8 products</span>
                        </div>
                        <div class="b-filter-main__sort-bar  fx-justify fx-items-center fx-wrap">
                            <div class="fx-items-center fx-justify">
                                <div class="b-select-listing">
                                    <span class="uk-icon uk-icon-th fz24 mr10 cur-p active" data-grid-type="grid"></span>
                                    <span class="uk-icon uk-icon-list mr20 fz24 cur-p" data-grid-type="listing"></span>
                                </div>
                                <form action="" class="b-filter-main__sort-bar-form">
                                    <button class="">Compare(0)</button>
                                </form>
                            </div>
                            <div class="b-filter-main__sort-bar-select fx-justify fx-items-center">
                                <p class="fz11 mr10 uk-hidden-small">Sort by</p>
                                <div class="uk-form-select" data-uk-form-select>
                                    <select>
                                        <option value="">English</option>
                                        <option value="">USD</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="b-filter-main__contain" data-grid-type-container>
                        <div class="uk-grid">
                            {% for i in 1..8 %}
                                <div class="products-item-wrapper uk-width-1-1  uk-width-small-1-2 uk-width-medium-1-3">
                                    {% include "elements/b-products-item.twig" %}
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="b-filter-main__footer tal">
                        <p class="txt-black fz14">Showing 1 - 7 of 7 items</p>
                    </div>

                </div>

            </div>
        </div>
        {% include "widgets/advantages-widget.twig" %}
    </div>

{% endblock %}